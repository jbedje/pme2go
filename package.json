  "scripts": {
    "start": "set PORT=3001 && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run websocket\" \"npm run start:win\"",
    "websocket": "node server/websocket-server.js",
    "start:win": "set PORT=3001 && react-scripts start",
    "migrate": "node server/migrate.js",
    "prod:build": "NODE_ENV=production npm run build",
    "prod:server": "NODE_ENV=production node server/production-server.js",
    "prod:migrate": "NODE_ENV=production node server/production-migrate.js",
    "docker:build": "docker build -t pme2go:latest .",
    "docker:run": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "prod:deploy": "npm run prod:build && npm run docker:build && npm run docker:run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
