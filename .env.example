# PME2GO Environment Configuration Template
# Copy this file to .env.local for development or configure in your deployment platform

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pme2go
DB_USER=postgres
DB_PASSWORD=your-database-password

# Railway uses DATABASE_URL instead (automatically provided)
# DATABASE_URL=postgresql://postgres:password@host:port/database

# Security Configuration (CRITICAL: Change these in production)
JWT_SECRET=your-super-secure-256-bit-jwt-secret
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Application Configuration
NODE_ENV=development
PORT=3004
FRONTEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3004

# Email Configuration (Use your SMTP provider)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=PME2GO

# Performance Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
MAX_REQUEST_SIZE=10mb

# Backup Configuration (Optional)
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=6

# Logging Configuration
LOG_LEVEL=info

# Frontend Environment Variables (for Vercel/local development)
# REACT_APP_API_URL=http://localhost:3004 (development)
# REACT_APP_API_URL=https://your-railway-app.railway.app (production)